<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white">
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:padding="10dp"
                    android:background="@drawable/article_page_bottom_layout_bg"
                    >
                <ImageView
                        android:layout_height="120dp"
                        android:layout_width="150dp"
                        android:src="@drawable/ic_defaultpic"
                        android:background="@android:color/white"
                        android:scaleType="centerCrop"
                        android:id="@+id/thumPic"
                        />
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bodyStruText"
                        android:layout_toRightOf="@+id/thumPic"
                        />
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SCBText"
                        android:layout_toRightOf="@+id/thumPic"
                        android:layout_below="@+id/bodyStruText"
                        />
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/driveModeText"
                        android:layout_toRightOf="@+id/thumPic"
                        android:layout_below="@+id/SCBText"
                        />
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lowCostText"
                        android:layout_toRightOf="@+id/thumPic"
                        android:layout_below="@+id/driveModeText"
                        />
            </RelativeLayout>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="#3598db"
                    />
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:padding="10dp"
                    android:background="@drawable/article_page_bottom_layout_bg"
                    >
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:id="@+id/store1Name"
                        />
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/store1Name"
                        android:src="@drawable/car_address_logo"
                        android:id="@+id/icon1"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:id="@+id/store1Addr"
                        android:layout_below="@id/store1Name"
                        android:layout_toRightOf="@+id/icon1"
                        />
                <Button android:layout_height="30dp"
                        android:layout_width="wrap_content"
                        android:background="@drawable/call_store"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:text="@string/call_4s_store"
                        />
            </RelativeLayout>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
