<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <Button
        android:id="@+id/register"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@xml/login_btn_background_white"
        android:text="注  册"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/login"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/login"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@xml/login_btn_background_blue"
        android:text="登  录"
        android:textColor="#FFFFFF"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/password"
        android:layout_alignParentRight="true"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/login_user"
        android:ems="10"
        android:background="@xml/register_edt_background"
        android:textColor="#000000"  
        android:hint="@string/user_name"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true" android:layout_alignLeft="@+id/register"
        android:layout_alignRight="@+id/login"/>

    <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/login_password"
            android:ems="10"
            android:hint="@string/password"
            android:background="@xml/register_edt_background"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:layout_below="@+id/username" android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/username" android:layout_alignRight="@+id/username">
        <requestFocus />
    </EditText>


</RelativeLayout>

