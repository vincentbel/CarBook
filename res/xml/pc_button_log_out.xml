<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#CC0000"/>
            <stroke
                    android:width="1dp"
                    android:color="#CC0000" />
            <corners
                    android:radius="5dp"
                    />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid android:color="#CC3300"/>
            <stroke
                    android:width="1dp"
                    android:color="#CC3300" />
            <corners
                    android:radius="5dp"
                    />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#CC3300"/>
            <stroke
                    android:width="1dp"
                    android:color="#CC3300" />
            <corners
                    android:radius="5dp"
                    />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>