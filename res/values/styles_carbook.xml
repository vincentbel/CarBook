<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Carbook" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_carbook</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Carbook</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Carbook</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Carbook</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Carbook</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Carbook</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_carbook</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_carbook</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Carbook</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Carbook.Widget</item>

        <!-- new -->
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle.Carbook</item>
        <item name="android:buttonStyle">@style/Button.Carbook</item>

    </style>

    <style name="ActionBar.Solid.Carbook" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_carbook</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_carbook</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_carbook</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Carbook</item>
    </style>

    <style name="ActionBar.Transparent.Carbook" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_carbook</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Carbook</item>
    </style>

    <style name="PopupMenu.Carbook" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_carbook</item>
        <item name="android:itemTextAppearance">@android:color/black</item>
    </style>

    <style name="DropDownListView.Carbook" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_carbook</item>
    </style>

    <style name="ActionBarTabStyle.Carbook" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_carbook</item>
    </style>

    <style name="DropDownNav.Carbook" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_carbook</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_carbook</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_carbook</item>
    </style>
    
    <style name="ProgressBar.Carbook" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_carbook</item>
    </style>
    
    <style name="ActionButton.CloseMode.Carbook" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_carbook</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Carbook.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Carbook</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Carbook</item>

        <item name="android:spinnerDropDownItemStyle">@style/Widget.DropDownItem.Spinner.Carbook</item>

    </style>

    <!-- new -->
    <style name="ActionBarTabTextStyle.Carbook" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Widget.DropDownItem.Spinner.Carbook" parent="android:style/Widget.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/TextAppearance.Widget.DropDownItem.Carbook</item>
    </style>

    <style name="TextAppearance.Widget.DropDownItem.Carbook" parent="@android:style/TextAppearance.Widget.DropDownItem">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Button.Carbook" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@xml/login_btn_background_white</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
